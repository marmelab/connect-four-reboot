{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "../../packages/shared/types",
    "../../packages/shared/lib"
  ],
  "exclude": ["node_modules"]
}
